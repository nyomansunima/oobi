{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@templates/*": ["./templates/*"]
    },
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
